<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7f5"
    tools:context="com.example.nayem.visualaid.NonUser">

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f7f5"
        android:text=""
        android:textColor="#0c6901"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username"

        android:text="Loading....."
        android:textAlignment="center"
        android:textColor="#f16a6a"
        android:textSize="25dp"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/userinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f5f7f5"
        android:textAlignment="center"
        android:textColor="#3437ef"
        android:textSize="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Show in Google Map"
        android:layout_marginBottom="179dp"
        android:background="#cac707"
        android:id="@+id/butt"
        android:onClick="goMap"/>

</RelativeLayout>
