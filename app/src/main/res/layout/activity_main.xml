<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nayem.visualaid.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Nonuser"
        android:textSize="20dp"
        android:textColor="#42490b"
        android:background="#d7dcb2"
        android:id="@+id/nonuser"
        android:onClick="nonuserActivity"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nonuser"
        android:background="#F0F0F0"
        android:text="User"
        android:textSize="100dp"
        android:id="@+id/user"
        android:textColor="#7F7F7F"
        android:onClick="userActivity"/>


</RelativeLayout>
